<h1 style="text-align: center">My tasks</h1>

<div style="margin: 50px; background-color: rgba(0,150,0,.5); box-shadow: 0px 0px 10px rgb(0,150,0)">
  <ul>
  <% @tasks.each do |task| %>
    <li><%= link_to task.title, task_path(task) %></li>
  </ul>
  <% end %>
</div>

<div style="margin: 50px; background-color: rgba(0,150,0,.5); box-shadow: 0px 0px 10px rgb(0,150,0)">
<%= link_to "Create new task", new_task_path %>
</div>
